@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar Usuario";
}

<div class="p-5 row">
    <h1>@ViewData["Title"]</h1>
    <hr>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating col-6">
            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" aria-required="true">
                <option disabled selected>Seleccione Rol</option>
            </select>
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>

        <div class="d-flex mt-5">
            <div class="form-floating col-6">
                <input asp-for="Input.DocumentType" class="form-control" aria-required="true" />
                <label asp-for="Input.DocumentType"></label>
                <span asp-validation-for="Input.DocumentType" class="text-danger"></span>
            </div>
            <div class="form-floating col-6">
                <input asp-for="Input.DocumentNumber" class="form-control" aria-required="true" />
                <label asp-for="Input.DocumentNumber"></label>
                <span asp-validation-for="Input.DocumentNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex mt-5">
            <div class="form-floating col-6">
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating col-6">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex mt-5">
            <div class="form-floating col-6">
                <input asp-for="Input.EntryDay" type="date" class="form-control" aria-required="true" />
                <label asp-for="Input.EntryDay"></label>
                <span asp-validation-for="Input.EntryDay" class="text-danger"></span>
            </div>
            <div class="form-floating col-6">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex mt-5">
            <div class="form-floating col-6">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating col-6">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex">
            
            <div class="w-25 mt-5">
                <button id="registerSubmit" type="submit" class="btn btn-primary botones-agregar">Registrar</button>
                <button id="registerSubmit" type="submit" class="btn btn-primary botones-agregar">Cancelar</button>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
