@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome Icons -->
<link rel="stylesheet" href="~/adminLTE/plugins/fontawesome-free/css/all.min.css">

<link href="~/css/login-roles-permisos/login.css" rel="stylesheet" />
<link href="~/css/estructuracion.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<div class="container d-flex justify-content-center w-50">
    <div class="w-60 border p-3 align-items-center contenedor-login">
        <div class="icono-perfil-centrado">
            <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="orange" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
            </svg>
        </div>

        <h2 class="text-center">Iniciar Sesión</h2>
        <p class="text-center">Bienvenido al sistema administrativo Pach-OS de Pachito-ché <br> Por favor ingrese su usuario y contraseña</p>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Input.Email" class="form-label">Correo: *</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span id="validacion-correo" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="form-label">Contraseña : *</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <span class="text-danger"></span>
            </div>

            <div class="w-100" id="botonDeshabilitado" title="Complete los campos para enviar la información">
                <button id="login-submit" type="submit" class="w-100 btn botones-agregar text-light mt-4" title="Click para iniciar sesión">Ingresar</button>
            </div>
        </form>
        <a id="forgot-password" asp-page="./ForgotPassword">Recuperar contraseña</a>
    </div>
</div>

<div class="position-absolute bottom-0 end-0 m-4">
    <div class="bg-warning rounded-circle p-2">
        <a title="Descargar aplicación móvil" href="#" id="apk-download">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="white" class="bi bi-phone" viewBox="0 0 16 16">
                <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2" />
            </svg>
        </a>
    </div>
</div>

<div>

</div>

<script src="~/js/login-recuperarcontraseña/login.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    function downloadApk() {
        // Crear un nuevo enlace
        const a = document.createElement('a');
        a.href = '~/APK/app-release.apk';
        a.download = 'app-release.apk';
        // Agregar al DOM
        document.body.appendChild(a);
        // Simular clic
        a.click();
        // Eliminar del DOM
        document.body.removeChild(a);
    }

    document.getElementById('apk-download').addEventListener('click', downloadApk);
</script>