@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer contraseña";
    Layout = null;

}

<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome Icons -->
<link rel="stylesheet" href="~/adminLTE/plugins/fontawesome-free/css/all.min.css">

<link href="~/css/login-roles-permisos/login.css" rel="stylesheet" />
<link href="~/css/estructuracion.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container d-flex justify-content-center w-50">
    <div class="w-60 border p-3 align-items-center contenedor-login">
        <div class="icono-perfil-centrado">
            <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="orange" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
            </svg>
        </div>
        <h2 class="text-center">Restablecer Contraseña</h2>
        <form method="post" id="formCambiarContrasena">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <span id="correoMensaje" class="invalid-feedback"></span>
                <span class="valid-feedback"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <span id="contrasenaMensaje" class="invalid-feedback"></span>
                <span class="valid-feedback"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <span id="confirmarContrasenaMensaje" class="invalid-feedback"></span>
                <span class="valid-feedback"></span>
            </div>

            <div class="w-100" id="botonDeshabilitado">
                <button type="submit" class="w-100 btn botones-agregar text-light mt-4">Restablecer contraseña</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/login-recuperarcontraseña/recuperarcontraseña.js"></script>
