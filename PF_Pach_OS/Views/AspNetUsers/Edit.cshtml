@model PF_Pach_OS.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
   
}
<link href="~/css/usuarios/resgistrousuarios.css" rel="stylesheet" />
<div class="p-5 row">
    <form id="registerForm" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" id="Id" asp-for="Id" />
        <div class="form-floating d-flex">

            <div class="form-floating col-6">
                <select id="Role" asp-for="Id_Rol" title="Aqui se selecciona el rol que se le quiere asignar al usuario" class="form-select" aria-required="true">
                    <option value="@ViewBag.IdPermisoActivo">@ViewBag.NombrePermisoActivo</option>
                    @foreach (var item in ViewBag.Permisos)
                    {
                        <option value="@item.IdRol">@item.NomRol</option>
                    }
                </select>
                <label asp-for="Id_Rol" class=" control-label">Rol*</label>
                <div id="mensaje_Rol" class="invalid-feedback"></div>

            </div>

            <div class="form-floating col-6">
                <select id="DocumentType" title="Aqui se selecciona el tipo de documento que posee el usuario" asp-for="DocumentType" class="form-select" aria-required="true">
                    <option value="Cedula">Cédula</option>
                    <option value="Tarjeta Identidad">Tarjeta de Identidad</option>
                    <option value="Pasaporte">Pasaporte</option>
                    <option value="Cedula Extranjera">Cédula Extranjera</option>
                </select>

                <label asp-for="DocumentType"></label>
                <div id="mensaje_TipoDocumento" class="invalid-feedback"></div>
            </div>
        </div>
        <div class="d-flex mt-5">
            <div class="form-floating col-6">
                <input id="DocumentNumber" title="Aqui se ingresa el numero de documento del usuario" asp-for="DocumentNumber" class="form-control" aria-required="true" />
                <label asp-for="DocumentNumber" ></label>
                <div id="mensaje_NumeroDocumento" class="invalid-feedback"></div>

            </div>

            <div class="form-floating col-6">
                <input id="FirstName" title="Aqui se ingresa el nombre del usuario" asp-for="FirstName" class="form-control" aria-required="true" />
                <label asp-for="FirstName" class="control-label">Nombre*</label>
                <div id="mensaje_Nombre" class="invalid-feedback" style="font-size: 12.8px;"></div>

            </div>
        </div>
        <div class ="d-flex mt-5 ">
            <div class="form-floating col-6">
                <input id="LastName" title="Aqui se ingresa el apellido del usuario" asp-for="LastName" class="form-control" aria-required="true" />
                <label asp-for="LastName" >Apellido*</label>
                <div id="mensaje_Apellido" class="invalid-feedback"></div>

            </div>


            <div class="form-floating col-6">
                <input id="Email" title="Aqui se ingresa el correo del usuario" asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email" >Correo*</label>
                <div id="mensaje_Correo" class="invalid-feedback"></div>

            </div>

        </div>

        <div class="w-100 d-flex flex-column mt-5">
            <input id="registerSubmit" type="submit" title="Con este boton se actualiza el usuario" value="Actualizar" class="btn btn-primary botones-agregar" />
            <a class="btn btn-outline-danger border mt-2 cancelarBtn" title="Con este boton se vuelve a la lista de usuarios" asp-controller="AspNetUsers" asp-action="Index">Cancelar</a>

        </div>
    </form>
</div>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/usuarios/EdiarUsuario.js"></script>