@model PF_Pach_OS.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
   
}
<link href="~/css/usuarios/resgistrousuarios.css" rel="stylesheet" />
<div class="p-5 row">
    <form id="registerForm" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" id="Id" asp-for="Id" />
        <div class="form-floating d-flex">

            <div class="form-floating col-6">
                <select asp-for="Id_Rol" class="form-select" aria-required="true">
                    <option value="@ViewBag.IdPermisoActivo">@ViewBag.NombrePermisoActivo</option>
                    @foreach (var item in ViewBag.Permisos)
                    {
                        <option value="@item.IdRol">@item.NomRol</option>
                    }
                </select>
                <label asp-for="Id_Rol" class=" control-label">Rol*</label>

            </div>

            <div class="form-floating col-6">
                <select asp-for="DocumentType" class="form-select" aria-required="true">
                    <option value="Cedula">Cédula</option>
                    <option value="Tarjeta Identidad">Tarjeta de Identidad</option>
                    <option value="Pasaporte">Pasaporte</option>
                    <option value="Cedula Extranjera">Cédula Extranjera</option>
                </select>

                <label asp-for="DocumentType"></label>
                <span asp-validation-for="DocumentType" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex mt-5">
            <div class="form-floating col-6">
                <input asp-for="DocumentNumber" class="form-control" aria-required="true" />
                <label asp-for="DocumentNumber" ></label>
                <span asp-validation-for="DocumentNumber" class="text-danger"></span>
            </div>

            <div class="form-floating col-6">
                <input asp-for="FirstName" class="form-control" aria-required="true"   />
                <label asp-for="FirstName" class="control-label">Nombre*</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class ="d-flex mt-5 ">
            <div class="form-floating col-6">
                <input asp-for="LastName" class="form-control" aria-required="true" />
                <label asp-for="LastName" >Apellido*</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>


            <div class="form-floating col-6">
                <input id="Email" asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email" >Correo*</label>
                <div id="mensaje_Correo" class="invalid-feedback"></div>

            </div>

        </div>

        <div class="w-100 d-flex flex-column mt-5">
            <input id="registerSubmit" type="submit" value="Actualizar" class="btn btn-primary botones-agregar" />
            <a class="btn btn-outline-danger border mt-2" asp-controller="AspNetUsers" asp-action="Index">Cancelar</a>

        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/usuarios/validaciones.js"></script>