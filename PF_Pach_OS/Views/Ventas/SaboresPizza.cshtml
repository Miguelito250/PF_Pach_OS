@model IEnumerable<PF_Pach_OS.Models.Producto>

@{
    Layout = null;
}

<link href="~/css/ventas/saborespizza.css" rel="stylesheet" />

<div>
    <form>
        <div class="row">
            <div class="col-7">
                <label>Tamaño</label>
                <select class="form-select" asp-items="ViewBag.IdProducto">
                </select>
            </div>
            <div class="col-5">
                <label class="form-label">Maximo de sabores</label>
                <input type="number" class="form-control" value="0" readonly>
            </div>
            <div class="col-7">
                <label class="form-label">Cantidad</label>
                <input type="number" class="form-control" value="0" readonly>
            </div>

        </div>
        <div class="mt-3 col">
            <table class="table mb-0 table-borderless table-bordered">
                <thead class="sombra">
                    <tr class="">
                        <th>Seleccionar sabor</th>
                        <th>Sabor de Pizza</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var saborPizza in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="saborPizza"></td>
                            <td><span>@saborPizza.NomProducto</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <input class="btn btn-outline-success" id="btnEnviar">
    </form>
</div>
<script src="~/js/ventas/saborespizzas.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>