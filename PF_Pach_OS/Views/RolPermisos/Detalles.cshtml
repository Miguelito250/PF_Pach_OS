@model PF_Pach_OS.Models.Asignar_Permisos

@{
    ViewData["Title"] = "Detalles";
    Layout = null;
}
<link href="~/css/RolPermisos/CreaEditar.css" rel="stylesheet" />

<div>
    <div class="col-12">


        <div class="form-group">
            <span class="fs-2 text-lg-center d-block mx-auto">
                @ViewBag.NomRol
            </span>
            <div class="row">

                <label class="control-label">Permisos </label>

                @if (ViewBag.Permisos != null)
                {

                    @foreach (var valor in (List<dynamic>)ViewBag.Permisos)
                    {
                        var isChecked = ((List<dynamic>)ViewBag.PermisosUsados).Any(item => item.IdPermiso == valor.id_permiso);

                        <div class="form-check form-switch col-6 row pb-2">
                            <label class="form-check-label col-6" for="flexSwitchCheckDefault">@valor.nom_permiso</label>
                            <input class="form-check-input col-6" disabled id="flexSwitchCheckDefault" type="checkbox" name="ValoresSeleccionados" value="" @(isChecked ? "checked" : "") />
                        </div>
                    }

                }
                else
                {
                    <p>La lista de permisos es nula.</p>
                }

            </div>
        </div>

    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
