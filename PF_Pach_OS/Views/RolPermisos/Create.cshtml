@model PF_Pach_OS.Models.Asignar_Permisos

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>RolPermiso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="rol.NomRol" class="control-label"></label>
                <input type="text" asp-for="rol.NomRol" />
            </div>
            <div class="form-group row">
                @if (ViewBag.Permisos != null)
                {
                    @foreach (var valor in (List<dynamic>)ViewBag.Permisos)
                    {
                        <label class="col-2">@valor.nom_permiso</label>
                        <input class="col-10" type="checkbox" name="ValoresSeleccionados" value="@valor.id_permiso" />
                    }

                }
                else
                {
                    <p>La lista de permisos es nula.</p>
                }
            </div>

            <input id="btnEnviar" class="btn btn-primary">

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {

        var Permisos = [];
        var nomRol;
        $('#rol_NomRol').on('input', function () {
            nomRol = $('#rol_NomRol').val();
        });


        $("#btnEnviar").on("click", function () {
            $('input[name="ValoresSeleccionados"]:checked').each(function () {
                Permisos.push($(this).val());
            });
            
            $.ajax({
                url: "/RolPermisos/Crear",
                type: "POST",
                data: {
                    permisos: Permisos,
                    nomRol: nomRol
                },
                success: function (data) {
                    if (data.success) {
                        window.location.href = 'https://localhost:7229/RolPermisos';
                    }
                }
            });
            console.log(nomRol)
            console.log(Permisos)

        });
    });
</script>