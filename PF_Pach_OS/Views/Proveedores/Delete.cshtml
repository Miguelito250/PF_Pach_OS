@model PF_Pach_OS.Models.Proveedore

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<h1>Eliminar</h1>

<h3>Seguro que desea eliminar proveedor?</h3>
<div>
    <h4>Proveedore</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nit)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomLocal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomLocal)
        </dd>

        <form asp-action="Disable" method="post">
            <input type="hidden" asp-for="IdProveedor" />
            <input type="submit" value="Deshabilitar" class="btn btn-danger" />
            <a asp-action="Index">Regresar</a>
        </form>

        <form asp-action="Enable" method="post">
            <input type="hidden" asp-for="IdProveedor" />
            <input type="submit" value="Habilitar" class="btn btn-success" />
            <a asp-action="Index">Regresar</a>
        </form>

</div>
